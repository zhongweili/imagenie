{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "imagenie",
  "version": "0.2.0",
  "identifier": "com.imagenie.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "allowlist": {
      "dialog": {
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      }
    }
  },
  "app": {
    "windows": [],
    "security": {
      "csp": {
        "default-src": "'self'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' asset: https://raw.githubusercontent.com data:",
        "connect-src": "'self' ipc: https://api.github.com",
        "script-src": "'self'"
      },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "copyright": "Copyright Â© 2024 Zhongwei",
    "shortDescription": "AI Image Processing",
    "longDescription": "AI-powered desktop app for stunning image transformations",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "nsis": {
        "installMode": "perMachine",
        "headerImage": null,
        "sidebarImage": null,
        "installerIcon": "icons/icon.ico",
        "languages": [
          "English",
          "SimpChinese"
        ]
      }
    }
  }
}
